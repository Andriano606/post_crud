<h1>Posts</h1>

<%= link_to 'New Post', new_post_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= truncate(post.content, length: 50) %></td>
        <td>
          <%
=begin%>
 <%= link_to 'Edit', edit_post_path(post) %> |
          <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %> 
<%
=end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
